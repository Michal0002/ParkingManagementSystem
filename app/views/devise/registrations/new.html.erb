<div class="container">
  <div class="row justify-content-center align-items-center" style="padding-top: 5%">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Rejestracja</h3>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                      <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :first_name, "Imię" %>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control", required: true %>
            </div>
            <div class="form-group">
              <%= f.label :last_name, "Nazwisko" %>
              <%= f.text_field :last_name, autocomplete: "last_name", class: "form-control", required: true %>
            </div>

            <div class="form-group">
              <%= f.label :phone, "Telefon" %>
              <%= f.text_field :phone, autocomplete: "phone", class: "form-control", required: true  %>
            </div>

            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autocomplete: "email", class: "form-control", required: true %>
            </div>

            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, "Potwierdź hasło" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
            </div>
              <br/>
            <div class="actions">
              <%= f.submit "Zarejestruj się", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      <div class="card-footer">
        <%= link_to "Masz już konto? Zaloguj się", new_session_path(resource_name), class: "btn btn-secondary" %>
      </div>
      </div>
    </div>
  </div>
</div>


