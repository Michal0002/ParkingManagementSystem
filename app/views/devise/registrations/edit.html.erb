<div class="container">
  <div class="row justify-content-center align-items-center" style="height: 100vh;">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Edytuj profil</h3>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <div class="form-group">
              <%= f.label :email, "Adres e-mail" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password, "Hasło" %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, "Potwierdź hasło" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :first_name, "Imię" %>
              <%= f.text_field :first_name, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :last_name, "Nazwisko" %>
              <%= f.text_field :last_name, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :phone, "Numer telefonu" %>
              <%= f.text_field :phone, class: "form-control" %>
            </div>

            <div class="actions">
              <%= f.submit "Zapisz zmiany", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
