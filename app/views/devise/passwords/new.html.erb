<div class="container">
  <div class="row justify-content-center align-items-center" style="height: 100vh;">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Przypomnij hasło</h3>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
<br/>
            <div class="actions">
              <%= f.submit "Wyślij link resetujący hasło", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer">
          <%= link_to "Zaloguj się", new_session_path(resource_name), class: "btn btn-secondary" %> 
          <%= link_to "Zarejestruj się", new_registration_path(resource_name), class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
