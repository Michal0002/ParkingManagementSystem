<% if @reservations.any? %>
  <div class="card text-white mx-auto" > 
  <div class="card-header">
        <h4 class="card-title" style="color:black">Historia rezerwacji</h4>
</div>
    <div class="card-body">
      <h4 class="card-title" style="color:black">Twoje rezerwację</h4>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Miejsce parkingowe</th>
            <th>Data</th>
            <th>Godzina</th>
            <th>Czas trwania</th>
            <th>Status</th>
            <th>Akcje</th>
          </tr>
        </thead>
        <tbody>
          <% @reservations.each do |reservation| %>
            <% if reservation.reservation_date >= Date.today %>
              <tr>
                <td><%= reservation.parking_spot.name %></td>
                <td><%= reservation.reservation_date.strftime("%d-%m-%Y") %></td>
                <td><%= reservation.reservation_time.strftime('%H:%M') %></td>
                <td><%= reservation.duration %></td>
                <td> <%= reservation.status %></td>
                <td>
                  <a href="#" class="btn btn-primary">Edytuj</a>
                  <a href="#" class="btn btn-danger">Anuluj</a>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <p>Brak rezerwacji do wyświetlenia.</p>
<% end %>
